@model PetProject1.Models.User

<form asp-action="Registration" asp-controller="Home" asp-antiforgery="true">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Name">Имя</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Age">Возраст</label><br />
            <input type="number" asp-for="Age" />
            <span asp-validation-for="Age"></span>
        </div>
        <div>
            <label asp-for="Email">Электронная почта</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Пароль</label><br />
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Подтвердите пароль</label><br />
            <input type="password" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <label asp-for="Adress">Адрес</label><br />
            <input type="text" asp-for="Adress" />
            <span asp-validation-for="Adress"></span>
        </div>
        <div>
            <label asp-for="PostIndex">Почтовый индекс</label><br />
            <input type="number" asp-for="PostIndex" />
            <span asp-validation-for="PostIndex"></span>
        </div><br />
        <div>
            <input type="submit" value="Зарегестрироваться" />
        </div>
    </div>
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}